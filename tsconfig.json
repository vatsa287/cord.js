{
  "extends": "./tsconfig.build.json",
  "include": [
    ".eslintrc.js",
    "packages/**/*",
    "jest-setup/*",
    "docs/*"
  ],
  "compilerOptions": {
    "baseUrl": "./packages",
    "sourceMap": true,
    "ignoreDeprecations": "5.0",
    "paths": {
      "@cord.network/network": [
        "network/src"
      ],
      "@cord.network/config": [
        "config/src"
      ],
      "@cord.network/sdk": [
        "sdk/src"
      ],
      "@cord.network/types": [
        "types/src"
      ],
      "@cord.network/utils": [
        "utils/src"
      ],
      "@cord.network/did": [
        "did/src"
      ],
      "@cord.network/docs": [
        "docs/src"
      ],
      "@cord.network/augment-api": [
        "augment-api/src"
      ],
      "@cord.network/augment-api/extraDefs": [
        "augment-api/src/interfaces/extraDefs"
      ],
      "@cord.network/type-definitions": [
        "type-definitions/src"
      ],
      "@cord.network/identifier": [
        "identifier/src"
      ],
      "@cord.network/chain-space": [
        "chain-space/src"
      ],
      "@cord.network/schema": [
        "schema/src"
      ],
      "@cord.network/statement": [
        "statement/src"
      ],
      "@cord.network/network-score": [
        "network-score/src"
      ],
      "@cord.network/store": [
        "store/src"
      ],
    }
  }
}
